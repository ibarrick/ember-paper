{{#if dropdown.isOpen}}
  {{#basic-dropdown/wormhole to=to renderInPlace=renderInPlace didInsert=(action "didOpen") willRemove=(action "willClose")}}
    <div
      id={{elementId}}
      class="ember-basic-dropdown-content {{class}} {{if renderInPlace 'ember-basic-dropdown-content--in-place'}} {{if hPosition (concat 'ember-basic-dropdown-content--' hPosition)}} {{if vPosition (concat 'ember-basic-dropdown-content--' vPosition)}}
      md-select-menu-container md-whiteframe-z2 md-clickable {{if isActive "md-active"}} {{unless isActive "md-leave"}}"
      dir={{dir}}>
      {{#paper-select-menu dropdownId=dropdownId searchEnabled=searchEnabled width=width dense=dense dropdown=dropdown as |menu|}}
        {{yield menu}}
      {{/paper-select-menu}}
    </div>
    {{paper-backdrop class="md-select-backdrop md-click-catcher"}}
  {{/basic-dropdown/wormhole}}
{{/if}}
